    "deceasedType": {
      "description": "Deceased Individual Type",
      "additionalProperties": false,
      "properties": {
        "dateOfDeath": {
          "pattern": "^([\\d]{4,4}\\-[\\d]{2,2}\\-[\\d]{2,2})$",
          "type": "string"
        },
        "individual": {
          "$ref": "#/definitions/individualType"
        }
      },
      "type": "object",
      "required": [
        "dateOfDeath",
        "individual"
      ]
    },
    "declarationType": {
      "description": "Declaration Type",
      "additionalProperties": false,
      "properties": {
        "correspondenceAddress": {
          "$ref": "#/definitions/correspondenceAddressType"
        },
        "confirmation": {
          "type": "boolean"
        },
        "date": {
          "pattern": "^([\\d]{4,4}\\-[\\d]{2,2}\\-[\\d]{2,2})$",
          "type": "string"
        },
        "familyName": {
          "maxLength": 47,
          "type": "string"
        },
        "givenName": {
          "maxLength": 25,
          "type": "string"
        },
        "otherName": {
          "maxLength": 25,
          "type": "string"
        }
      },
      "required": [
        "givenName",
        "familyName",
        "correspondenceAddress",
        "date",
        "confirmation"
      ],
      "type": "object"
    },
    "estateType": {
      "description": "Estate Type",
      "additionalProperties": false,
      "properties": {
        "estateName": {
          "maxLength": 56,
          "type": "string"
        },
        "correspondenceAddress": {
          "$ref": "#/definitions/correspondenceAddressType"
        },
        "personalRepresentative": {
          "$ref": "#/definitions/personalRepresentativeType"
        },
        "adminPeriodFinishedDate": {
          "pattern": "^([\\d]{4,4}\\-[\\d]{2,2}\\-[\\d]{2,2})$",
          "type": "string"
        },
        "reasonEstateSetup": {
          "description" : " A reason the Estate is being set up\na) Is the total Income Tax and Capital Gains Tax due for the administration period more than £10,000? ????\nb) If the date of death was before 5 April 2016, did more than £250,000 come from the sale of the estate's assets by administrators or executors, in any one tax year? ????\nc) If the date of death is on or after 6 April 2016, did more than £500,000 come from the sale of the estate's assets by administrators or executors in any one tax year? ???\nd) Was the estate worth more than £2.5 million at the date of death? ????",
          "enum": [
            "incomeTaxDueMoreThan10000",
            "saleOfEstateAssetsMoreThan250000",
            "saleOfEstateAssetsMoreThan500000",
            "worthMoreThanTwoAndHalfMillionAtTimeOfDeath"
          ]
        },
        "declaration": {
          "$ref": "#/definitions/declarationType"
        },
        "deceased": {
          "$ref": "#/definitions/deceasedType"
        },
        "telephoneNumber": {
          "$ref": "#/definitions/telephoneNumberType"
        }
      },
      "required": ["estateName",
        "correspondenceAddress",
        "personalRepresentative",
        "reasonEstateSetup",
        "declaration",
        "deceased"],
      "type": "object"
    },
    "individualType": {
      "description": "Individual Type",
      "additionalProperties": false,
      "properties": {
        "correspondenceAddress": {
          "$ref": "#/definitions/correspondenceAddressType"
        },
        "dateOfBirth": {
          "type": "string",
          "pattern": "^([\\d]{4,4}\\-[\\d]{2,2}\\-[\\d]{2,2})$"
        },
        "familyName": {
          "maxLength": 47,
          "type": "string"
        },
        "givenName": {
          "maxLength": 25,
          "type": "string"
        },
        "isUkNationalOrNonUkWithANino": {
          "type": "boolean"
        },
        "nino": {
          "pattern": "^(?!BG)(?!GB)(?!NK)(?!KN)(?!TN)(?!NT)(?!ZZ)(?:[A-CEGHJ-PR-TW-Z][A-CEGHJ-NPR-TW-Z])(?:\\d){6}([A-D]|\\s)?$",
          "type": "string"
        },
        "otherName": {
          "maxLength": 25,
          "type": "string"
        },
        "passportOrIdCard": {
          "additionalProperties": false,
          "properties": {
            "countryOfIssue": {
              "$ref": "#/definitions/countryCodeType"
            },
            "expiryDate": {
              "pattern": "^([\\d]{4,4}\\-[\\d]{2,2}\\-[\\d]{2,2})$",
              "type": "string"
            },
            "referenceNumber": {
              "maxLength": 30,
              "type": "string"
            }
          },
          "type": "object"
        }
      },
      "required": [
        "givenName",
        "familyName",
        "dateOfBirth"
      ],
      "type": "object"
    },
    "personalRepresentativeType": {
      "description": "Personal Representative Type",
      "additionalProperties": false,
      "properties": {
        "individual": {
          "$ref": "#/definitions/individualType"
        },
        "telephoneNumber": {
          "$ref": "#/definitions/telephoneNumberType"
        },
        "email": {
          "$ref": "#/definitions/emailType"
        }
      },
      "required": [
        "individual",
        "telephoneNumber"
      ],
      "type": "object"
    },
    "postalCodeType": {
      "description": "Postal Code Type",
      "pattern": "^([Gg][Ii][Rr]( )?0[Aa]{2})|((([A-Za-z][0-9]{1,2})|(([A-Za-z][A-Ha-hJ-Yj-y][0-9]{1,2})|(([AZa-z][0-9][A-Za-z])|([A-Za-z][A-Ha-hJ-Yj-y][0-9]?[A-Za-z]))))( )?[0-9][A-Za-z]{2})$",
      "type": "string"
    },
    "telephoneNumberType": {
      "description": "telephone Number Type",
      "maxLength": 19,
      "pattern": "^(\\+\\d\\d)?\\s?[\\d\\(]?\\d{0,5}[\\d\\)][\\s\\d]{0,15}$",
      "type": "string"
    },
    "emailType": {
      "type": "string",
      "pattern": "^[-aA-zZ0-9._%+']+@[-aA-zZ0-9.']+\\.[aA-zZ]{2,4}$"
    }
  }
