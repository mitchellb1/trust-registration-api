{
	"$schema": "http://json-schema.org/draft-04/schema",
    "id": "http://uk/gov/hmrc/trustregistration/raml/schemas/error.json",
    "title": "Error Message",
    "description": "The Standard Error Message format. This message must be provided if the status code is 403. In all other cases, it is optional",
    "type": "object",
    "properties": {
        "message" : {
            "type": "string",
            "default": "Account is temporarily suspended"
        },
        "code" : {
            "type": "string",
            "default": "ACCOUNT_SUSPENDEDSA-100201"
        },
        "location" : {
            "type": "string"
        }
    },
    "required" : [ "message", "code" ]
}
